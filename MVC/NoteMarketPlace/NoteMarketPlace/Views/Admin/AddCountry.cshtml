
@{
    ViewBag.Title = "AddCountry";
    Layout = "~/Views/Shared/_AdminNav.cshtml";
}

@model NoteMarketPlace.Models.AdminModel.AddCountryModel


<div id="add-country">
    <div class="content-box-lg">

        <div class="contact-text">
            <h4>Add Country</h4>
        </div>

        @using (Html.BeginForm(FormMethod.Post))
        {

            <div class="row">
                <div class="col-md-6">

                    <div class="form-group">
                        <div class="contact-inputs-02">
                            <label for="fullname">Country Name <span>*</span> </label>
                            @*<input type="text" class="form-control" id="fullname" placeholder="Enter country name">*@
                            @Html.TextBoxFor(model => model.CountryName, new { @class = "form-control", placeholder = "Enter country name", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="contact-inputs-02">
                            <label for="fullname">Country Code <span>*</span> </label>
                            @*<input type="text" class="form-control" id="fullname" placeholder="Enter country code">*@
                            @Html.TextBoxFor(model => model.CountryCode, new { @class = "form-control", placeholder = "Enter country code", required = "required" })
                        </div>
                    </div>

                    <div class="contact-submit-btn">
                        <button class="btn" type="submit" formaction="@(ViewBag.Edit == true ? "AddCountry?id="+Model.Id : "AddCountry" )">SUBMIT</button>
                    </div>

                </div>
            </div>

        }


    </div>
</div>

