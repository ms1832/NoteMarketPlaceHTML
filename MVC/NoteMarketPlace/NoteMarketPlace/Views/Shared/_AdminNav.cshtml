                        <span id="mobile-nav-open-btn">&#9776;</span>
                        <span id="mobile-nav-close-btn">&times;</span>

                        <a href="#" class="navbar-brand">
                            <img src="~/img/logo.png" alt="logo">
                        </a>
                    </div>

                    <div class="container">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav pull-right">
                                <li><a href="#">Dashboard</a></li>
                                <li>
                                    <div class="dropdown">
                                        <a id="notes-dropdown">Notes</a>
                                        <div class="notes-dropdown-menu">
                                            <a class="dropdown-item" href="">Notes Under Review</a>
                                            <a class="dropdown-item" href="">Published Notes</a>
                                            <a class="dropdown-item" href="">Downloaded Notes</a>
                                            <a class="dropdown-item" href="">Rejected Notes</a>
                                        </div>
                                    </div>
                                </li>
                                <li><a href="">Members</a></li>
                                <li>
                                    <div class="dropdown">
                                        <a id="reports-dropdown">Reports</a>
                                        <div class="reports-dropdown-menu">
                                            <a class="dropdown-item" href="">Spam Reports</a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="dropdown">
                                        <a id="settings-dropdown">Settings</a>
                                        <div class="settings-dropdown-menu">
                                            <a class="dropdown-item" href="">Manage System Configuration</a>
                                            <a class="dropdown-item" href="">Manage Administrator</a>
                                            <a class="dropdown-item" href="">Manage Category</a>
                                            <a class="dropdown-item" href="">Manage Type</a>
                                            <a class="dropdown-item" href="">Manage Countries</a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="dropdown">
                                        <img id="profile-dropeddown" src="~/img/Home/user-img.png" alt="profile-img"
                                             class="img-circle">
                                        <div class="profile-dropdown-menu">
                                            <a class="dropdown-item" href="#">Update Profile</a>
                                            <a class="dropdown-item" href="#">Change Password</a>
                                            <a class="dropdown-item" href="#">LOGOUT</a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <button class="btn nav-login-btn">Logout</button>
                                </li>
                            </ul>
                        </div>
                    </div>


                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <div id="mobile-nav-content">
                            <ul class="nav">
                                <li><a href="dashboard.html">Dashboard</a></li>
                                <li>
                                    <a class="collapsed" data-toggle="collapse" data-target="#notes">
                                        Notes
                                        <img src="~/img/icons/arrow-down.png" alt="down" class="down-arw">
                                        <img src="~/img/icons/close.png" alt="down" class="down-up">
                                    </a>
                                    <div class="profile-dropeddown">
                                        <ul class="collapse" id="notes">
                                            <li><a href="">Notes Under Review</a></li>
                                            <li><a href="">Published Notes</a></li>
                                            <li><a href="">Downloaded Notes</a></li>
                                            <li><a href="">Rejected Notes</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li><a href="#">Members</a></li>
                                <li>
                                    <a class="collapsed" data-toggle="collapse" data-target="#reports">
                                        Reports
                                        <img src="~/img/icons/arrow-down.png" alt="down" class="down-arw">
                                        <img src="~/img/icons/close.png" alt="down" class="down-up">
                                    </a>
                                    <div class="profile-dropeddown">
                                        <ul class="collapse" id="reports">
                                            <li><a href="">Spam Reports</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li>
                                    <a class="collapsed" data-toggle="collapse" data-target="#settings">
                                        Settings
                                        <img src="~/img/icons/arrow-down.png" alt="down" class="down-arw">
                                        <img src="~/img/icons/close.png" alt="down" class="down-up">
                                    </a>
                                    <div class="profile-dropeddown">
                                        <ul class="collapse" id="settings">
                                            <li><a href="">Manage System Configuration</a></li>
                                            <li><a href="">Manage Administrator</a></li>
                                            <li><a href="">Manage Category</a></li>
                                            <li><a href="">Manage Type</a></li>
                                            <li><a href="">Manage Countries</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li>
                                    <div class="profile-dropeddown">
                                        <img src="~/img/Home/user-img.png" alt="profile-img"
                                             class="collapsed img-circle profile-img" data-toggle="collapse"
                                             data-target="#profile">
                                        <ul class="collapse" id="profile">
                                            <li><a href="#">Update Profile</a></li>
                                            <li><a href="#">Change Password</a></li>
                                            <li><a href="#">Logout</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li>
                                    <button class="btn nav-login-btn">Logout</button>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </nav>
