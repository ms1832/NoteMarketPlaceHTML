
@model List<NoteMarketPlace.Models.MyRejectedNotes>

@{
    ViewBag.Title = "MyRejectedNotes";
    Layout = "~/Views/Shared/_UserNav.cshtml";
}


<!-- Rejected Notes -->
<div id="rejected-notes">

    <div class="dashboard-progress-notes">
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <h4>My Rejected Notes</h4>
            </div>
            <div class="col-md-8 col-sm-6 col-xs-12">
                <div class="proress-note-search">
                    <div class="row">
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            <div class="search">
                                <img src="~/img/icons/search-icon.png" alt="search">
                                <input type="search" class="form-control" id="rejectednote_search_input" placeholder="Search">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <button class="btn btn-search" id="rejectednote_search">SEARCH</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive dashboard-table">

        <table class="table" id="rejectednote_table">

            <thead>
                <tr>
                    <th scope="col">SR NO.</th>
                    <th scope="col">NOTE TITLE</th>
                    <th scope="col">CATEGORY</th>
                    <th scope="col">REMARKS</th>
                    <th scope="col">CLONE</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @{
                    if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="6" style="text-align:center" >No Data Available</td>
                        </tr>
                    }
                    else
                    {
                        int count = 0;
                        foreach (var data in Model)
                        {
                            count++;
                            <tr>
                                <td scope="row">@count</td>
                                <td>@data.Title</td>
                                <td>@data.Category</td>
                                <td>@data.Remark</td>
                                <td onclick="Clone(@data.Id)">Clone</td>
                                <td>
                                    <div class="table-actions-view">
                                        <div class="dropdown">
                                            <img id="more-dropeddown" src="~/img/icons/dots.png" alt="more"
                                                 data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <div class="dropdown-menu more-dropdown-menu" aria-labelledby="more-dropeddown">
                                                <a class="dropdown-item" onclick="Download(@data.Id)" >Download Note</a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }

                    }

                }

            </tbody>
        </table>
    </div>


</div>
<!-- Rejected Notes Ends -->

<script>

    function Download(id) {
        location.href = "DownloadNote?noteId=" + id;
    }

    function Clone(id) {
        location.href = "CloneNote?noteId=" + id;
    }

</script>